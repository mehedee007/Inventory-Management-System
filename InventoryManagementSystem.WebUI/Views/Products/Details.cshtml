@model InventoryManagementSystem.Domain.Entities.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Product Code</dt>
        <dd class="col-sm-10">@Model.ProductCode</dd>

        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.ProductDescription</dd>

        <dt class="col-sm-2">Measure Unit</dt>
        <dd class="col-sm-10">@Model.MeasureUnit</dd>

        <dt class="col-sm-2">ROL</dt>
        <dd class="col-sm-10">@Model.ROL</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
